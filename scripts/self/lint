#!/usr/bin/env bash

source "$DOTLY_PATH/scripts/core/_main.sh"
source "$DOTLY_PATH/scripts/core/dotly.sh"

##? Lint all dotly related bash files
##?
##? Usage:
##?    lint
##?    lint [--fix]
if [ "$1" == "-h" ] || [ "$1" = "--help" ]; then
  docs::parse "$@"
fi
script::depends_on shfmt

if [ "$1" = "--fix" ]; then
  dotly::list_bash_files | xargs shfmt -s -w
else
  dotly::list_bash_files | xargs shfmt -i 2 -d -s
fi
