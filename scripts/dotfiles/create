#!/usr/bin/env bash

set -euo pipefail

source "$DOTLY_PATH/scripts/core/_main.sh"

##? Create the dotfiles structure
##?
##? Usage:
##?    create [dotfiles_path]
##?
docs::parse "$@"

dotfiles::apply_templating() {
  sed -i -e "s|XXX_DOTFILES_PATH_XXX|$DOTFILES_PATH|g" "$DOTFILES_PATH/bin/sdot"
  sed -i -e "s|XXX_DOTFILES_PATH_XXX|$DOTFILES_PATH|g" "$DOTFILES_PATH/shell/bash/.bashrc"
  sed -i -e "s|XXX_DOTFILES_PATH_XXX|$DOTFILES_PATH|g" "$DOTFILES_PATH/shell/bash/.bashrc"
}

# @todo Ensure it's not already created
cp -r "$DOTLY_PATH/dotfiles_template/"* "$DOTFILES_PATH/"

dotfiles::apply_templating

log::success "Done!"
