#!/usr/bin/env bash

source "$DOTLY_PATH/scripts/core/_main.sh"

##? ZSH helpers
##?
##? Usage:
##?   zsh optimize
##?   zsh test_performance
##?   zsh reload_completions
##?   zsh clean_cache
docs::parse "$@"

case $1 in
"optimize")
  asl_conf=$(sed 's/notice] store/critical] store/g' /etc/asl.conf)
  sudo sh -c "echo '$asl_conf' > /etc/asl.conf"
  echo "ASL only storing critical files!"

  zsh "$ZIM_HOME/zimfw.zsh" clean-compiled && zsh "$ZIM_HOME/zimfw.zsh" compile

  "$DOTLY_PATH/bin/dot" shell zsh reload_completions
  ;;
"test_performance")
  if [[ $(uname -m) == 'arm64' ]]; then
    ZSH_BIN_PATH='/opt/homebrew/bin/zsh'
  else
    ZSH_BIN_PATH='/usr/local/bin/zsh'
  fi
  script::depends_on hyperfine

  hyperfine '/bin/zsh -i -c exit' "${ZSH_BIN_PATH} -i -c exit" --warmup 1

  echo ""
  echo "ZSH INFO:"
  echo "  üçé macOS ZSH üìÇ /bin/zsh              - $(/bin/zsh --version)"
  echo "  üç∫ Brew ZSH  üìÇ ${ZSH_BIN_PATH} - $(${ZSH_BIN_PATH} --version)"

  echo ""
  echo "‚ú® Currently using $(command -v zsh) ‚ú®"
  ;;
"clean_cache")
  find "$HOME" -name '*.zwc' -delete
  ;;
"reload_completions")
  zsh -i -c "autoload -U compaudit && autoload -Uz compinit && compinit"

  output::empty_line
  output::answer 'Now restart your terminal'
  ;;
*)
  exit 1
  ;;
esac
